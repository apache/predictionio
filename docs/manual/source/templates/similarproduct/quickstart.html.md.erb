  access_key=<ACCESS KEY>,
  url=<URL OF EVENTSERVER>,
  threads=5,
  qsize=500
)

# Create a new user

client.create_event(
  event="$set",
  entity_type="user",
  entity_id=<USER_ID>,
  # current time will be used if event_time is not specified
  event_time=datetime(
    2014, 11, 02, 09, 39, 45, 618000, pytz.timezone('US/Pacific')
)
```
